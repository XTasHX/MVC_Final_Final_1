@model IEnumerable<MVC_Final_Final.Models.Docs.DocsClass>

@{
    ViewData["Title"] = "upload";
}


<!DOCTYPE html>
<html>
<head>

    <h2 style="color:#ff90e7;">Please Choose a File to Upload</h2>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FileLib</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>

<body>

    <form asp-controller="Docs" asp-action="UploadFile" method="post"
          enctype="multipart/form-data">

        <input type="file" name="file" />
        <button type="submit" class="btn btn-outline-warning">Upload File</button>

    </form>



    <footer>
        <p>&copy; 2018 - FileLib</p>
    </footer>


</body>
</html>
